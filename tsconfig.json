{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",         // Compile to 'dist' folder
    "rootDir": "./src",         // Ensure 'src' is the root for compilation
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "baseUrl": ".",             // Ensure base directory is set properly
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"]
    }
  },
  "include": ["src/**/*"],    // Compile all files inside 'src' folder
  "exclude": ["node_modules"]
}
